{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "POSTGRES_CONNECTION_URL",
        "REDIS_CONNECTION_URL",
        "CLIENT_DOMAIN",
        "SERVER_URL"
      ]
    },
    "db:generate": {
      "cache": false,
      "env": [
        "POSTGRES_CONNECTION_URL",
        "REDIS_CONNECTION_URL",
        "CLIENT_DOMAIN",
        "SERVER_URL"
      ]
    },
    "db:push": {
      "cache": false,
      "env": [
        "POSTGRES_CONNECTION_URL",
        "REDIS_CONNECTION_URL",
        "CLIENT_DOMAIN",
        "SERVER_URL"
      ],
      "inputs": [".env"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true,
      "env": [
        "POSTGRES_CONNECTION_URL",
        "REDIS_CONNECTION_URL",
        "CLIENT_DOMAIN",
        "SERVER_URL"
      ]
    },
    "start": {
      "dependsOn": ["^start"],
      "cache": false,
      "env": [
        "POSTGRES_CONNECTION_URL",
        "REDIS_CONNECTION_URL",
        "CLIENT_DOMAIN",
        "SERVER_URL"
      ]
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    }
  }
}
